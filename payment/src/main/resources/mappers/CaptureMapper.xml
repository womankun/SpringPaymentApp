<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.payment.mapper.CaptureMapper">

  
  <update id="registerCapture" parameterType="com.example.payment.model.Payment">
    UPDATE payments
    SET status = #{status},
        captured_at = #{capturedAt}
    WHERE payment_id = #{paymentId}
  </update>


</mapper>
