<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.payment.mapper.VoidMapper">

  
  <update id="registerVoid" parameterType="com.example.payment.model.Payment">
    UPDATE payments
    SET status = #{status},
        voided_at = #{voidedAt}
    WHERE payment_id = #{paymentId}
  </update>


</mapper>
